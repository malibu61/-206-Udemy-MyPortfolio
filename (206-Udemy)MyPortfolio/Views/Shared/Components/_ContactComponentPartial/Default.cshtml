<section id="contact" class="s-contact target-section">

    <div class="overlay"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>İletişim</h3>
            <h1>Merhaba De!</h1>

            <p class="lead">Mesaj Bırakmak İçin Lütfen Aşağıdaki Formu Doldurunuz.</p>
        </div>
    </div>

    <div class="row contact__main">
        <div class="col-eight tab-full contact__form">
            <form asp-action="SendMessage" asp-controller="ContactSendMessage" method="post">
                <fieldset>

                    <div class="form-field">
                        <input name="NameSurname" type="text" placeholder="Adınız ve Soyadınız" value="" minlength="2" required="" aria-required="true" class="full-width" style="color:wheat;">
                    </div>
                    <div class="form-field">
                        <input name="Subject" type="email" placeholder="Konu" value="" required="" aria-required="true" class="full-width  style=" color:wheat"">
                    </div>
                    <div class="form-field">
                        <input name="Email" type="email" placeholder="Email Adresinizi Giriniz" value="" class="full-width" style="color:wheat">
                    </div>
                    <div class="form-field">
                        <textarea name="MessageDetail" placeholder="Mesajınızı Buraya Giriniz" rows="10" cols="50" required="" aria-required="true" class="full-width" style="color:wheat"></textarea>
                    </div>
                    <div class="form-field">
                        <button class="full-width btn--primary" style="color:wheat">Gönder</button>
                        <div class="submit-loader">
                            <div class="text-loader">Gönderiliyor...</div>
                            <div class="s-loader">
                                <div class="bounce1"></div>
                                <div class="bounce2"></div>
                                <div class="bounce3"></div>
                            </div>
                        </div>
                    </div>

                </fieldset>
            </form>

            <!-- contact-warning -->
            <div class="message-warning">
                Bir şeyler yanlış gitti. Lütfen tekrar deneyin.
            </div>

            <!-- contact-success -->
            <div class="message-success">
                Mesajınız gönderildi, teşekkürler!<br>
            </div>

        </div>
        <div class="col-four tab-full contact__infos">
            <h4 class="h06">Telefon</h4>
            <p>
                Telefon1: (+63) 555 1212<br>
                Telefon2: (+63) 555 0100<br>
                Fax: (+63) 555 0101
            </p>

            <h4 class="h06">E-mail</h4>
            <p>
                holamail@holawebsite.com<br>
                info@holawebsite.com
            </p>

            <h4 class="h06">Adres</h4>
            <p>
                Barbaros Bulvarı No: 45<br>
                İstanbul, Beşiktaş<br>
                94043 TR
            </p>
        </div>

    </div>

</section> 